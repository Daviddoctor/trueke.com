<div class="row">
    <div class="col-md-4 mx-auto">
         {{#if messages }}
            {{#each messages}}
                <div class="alert alert-danger">
                    <p>{{this}}</p>
                </div>
            {{/each}}
        {{/if}}

        <div class="card">
            <div class="card-header">
                Sign Up
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="surname" placeholder="Apellido"
                            value="{{surname}}">
                    </div>
                    <div class="form-group">
                        <input type="email"
                        id="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="form-control" name="password" placeholder="Ingresar Contraseña"
                            value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password"
                            placeholder="Confirmar Contraseña" value="{{confirm_password}}">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrarse
                        </button>
                    </div>
                </form>
                <strong>Already have an account? <a href="/users/signin">Login now!</a></strong>
            </div>
        </div>
    </div>
</div>